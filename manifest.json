{
    "manifest_version": 3,
    "name": "ServiceNow Time Entry",
    "version": "1.0",
    "description": "Allows manual selection of time to enter for ServiceNow tickets.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "*://*.service-now.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.service-now.com/*"],
        "js": ["content.js"],
        "run_at": "document_end",
        "all_frames": true
      }
    ]
  }