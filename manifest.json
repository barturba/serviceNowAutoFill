{
    "manifest_version": 3,
    "name": "ServiceNow Auto-Filler",
    "version": "1.0",
    "description": "Auto-fills fields in ServiceNow forms.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://*.service-now.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.service-now.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }